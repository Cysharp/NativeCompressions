<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<None Include="runtimes\win-x64\native\liblz4.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	
	<!-- for debug perpose, if exists in debug, copy it -->
	<ItemGroup Condition="'$(Configuration)' == 'Debug' and Exists('../../target/debug/lz4.dll')">
		<None Include="../../target/debug/lz4.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<Link>liblz4.dll</Link>
		</None>
		<None Include="../../target/debug/lz4.pdb">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<Link>liblz4.pdb</Link>
		</None>
	</ItemGroup>

</Project>
